html, body {
    height: 100%;
}

body {
    font: 14px/1 'Open Sans', sans-serif;
    color: #555;
    background: #fff;
}

a {
  color: #00B7FF;
}

.graph-container {
    width: 100%;
    height: 350px;
}

.chart-legend {
    display: none;
}

.item,
.chart-tooltip {
    font-family: 'OpenSans', sans-serif;
    color: #fff;
    background: #2f4f4f;
    text-align: left;
}

/* adjust the line thickness of all charts */
.chart
.line-series path {
    stroke-width: 1px;
}

